@model WebApp.Models.Document
@{
    ViewData["Title"] = "Edit Document";
}

<div class="container mt-5 mb-5">
    <div class="card shadow border-0">
        <div class="card-header bg-warning text-dark d-flex justify-content-between align-items-center">
            <h4 class="mb-0"><i class="bi bi-pencil-square"></i> Edit Document</h4>
            <a asp-action="Index" class="btn btn-sm btn-outline-dark"><i class="bi bi-arrow-left"></i> Back</a>
        </div>

        <div class="card-body bg-light">
            <form asp-action="Edit" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />

                <!-- File name (read-only) -->
                <div class="mb-3">
                    <label asp-for="FileName" class="form-label fw-bold"></label>
                    <input asp-for="FileName" class="form-control" readonly />
                </div>

                <!-- Category dropdown -->
                <div class="mb-3">
                    <label asp-for="CategoryId" class="form-label fw-bold">Category</label>
                    <select asp-for="CategoryId" class="form-select"
                            asp-items="@(new SelectList(ViewBag.Categories, "Id", "Name", Model.CategoryId))">
                        <option value="">-- Select Category --</option>
                    </select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>

                <!-- Upload Date -->
                <div class="mb-3">
                    <label class="form-label fw-bold">Upload Date</label>
                    <input type="text" value="@Model.UploadDate.ToLocalTime()" class="form-control" readonly />
                </div>

                <!-- Save / Cancel buttons -->
                <div class="text-end">
                    <button type="submit" class="btn btn-success me-2">
                        <i class="bi bi-save"></i> Save
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
