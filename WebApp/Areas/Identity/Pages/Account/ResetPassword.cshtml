@page "{email?}"
@model ResetPasswordModel
@{
    ViewData["Title"] = "Reset Password";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />

<style>
    body {
        background: #eef3f9;
        font-family: 'Segoe UI', sans-serif;
    }

    .reset-card {
        max-width: 500px;
        width: 100%;
        background: #ffffff;
        border-radius: 12px;
        padding: 30px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.08);
    }

    .btn-primary-custom {
        background: linear-gradient(135deg, #0d47a1, #1976d2);
        border: none;
        color: white;
        padding: 12px;
        border-radius: 8px;
        font-size: 16px;
        font-weight: 600;
        width: 100%;
    }
</style>


<div class="container d-flex justify-content-center py-5">
    <div class="reset-card">

        <h2 class="fw-bold text-center mb-3" style="color:#0d47a1;">Reset Password</h2>
        <p class="text-center text-muted mb-4">Set a new password to access your account.</p>

        <form method="post">

            <input type="hidden" asp-for="Input.Email" />

            <div asp-validation-summary="All" class="text-danger mb-3"></div>

            <div class="form-group mb-3">
                <label class="fw-semibold">New Password</label>
                <input asp-for="Input.Password" type="password" class="form-control form-control-lg" placeholder="Enter new password" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
                <label class="fw-semibold">Confirm Password</label>
                <input asp-for="Input.ConfirmPassword" type="password" class="form-control form-control-lg" placeholder="Re-enter password" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="btn-primary-custom">
                Reset Password
            </button>

        </form>

        <div class="text-center mt-3">
            <a asp-page="./Login" style="color:#0d47a1; font-weight:600;">Back to Login</a>
        </div>

    </div>
</div>
