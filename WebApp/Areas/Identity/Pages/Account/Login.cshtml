@page
@model LoginModel
@{
    ViewData["Title"] = "Login";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />

<style>
    body {
        background: #eef3f9;
    }

    .brand-panel {
        background: linear-gradient(135deg, #0d47a1, #1976d2);
        color: white;
        padding: 60px;
        height: 100%;
        border-radius: 15px;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }
</style>

<div class="container py-5">
    <div class="row justify-content-center align-items-center gx-5">

        <!-- LEFT: Login Card -->
        <div class="col-md-5">
            <div class="card shadow-lg p-4" style="border-radius: 12px;">
                <h3 class="fw-bold text-center mb-2" style="color:#0d47a1;">SmartDoc OCR</h3>
                <p class="text-center text-muted">Sign in to continue</p>

                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="mb-3">
                        <label asp-for="Input.Email" class="form-label fw-semibold"></label>
                        <input asp-for="Input.Email" class="form-control form-control-lg" placeholder="Enter your email" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.Password" class="form-label fw-semibold"></label>
                        <input asp-for="Input.Password" class="form-control form-control-lg" placeholder="Enter your password" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-between mb-4">
                        <div class="form-check">
                            <input asp-for="Input.RememberMe" class="form-check-input" />
                            <label asp-for="Input.RememberMe" class="form-check-label">
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>

                        <a asp-page="./ForgotPassword" class="text-decoration-none fw-semibold" style="color:#0d47a1;">
                            Forgot Password?
                        </a>
                    </div>

                    <button type="submit" class="btn w-100 py-2 text-white"
                            style="background:#0d47a1; border:none; border-radius:8px;">
                        Sign In
                    </button>
                </form>

                <div class="text-center mt-4">
                    <p class="small">
                        Don't have an account?
                        <a asp-page="./Register" style="color:#0d47a1;" class="fw-semibold">Register here</a>
                    </p>
                </div>
            </div>
        </div>

        <!-- RIGHT: App Intro -->
        <div class="col-md-6">
            <div class="brand-panel shadow-lg">
                <h2 class="fw-bold">Document OCR, Reimagined.</h2>

                <p class="lead mt-3">
                    SmartDoc OCR converts your PDFs and documents into clean, searchable text using powerful OCR technology.
                </p>

                <ul class="mt-3 fs-6">
                    <li>✔ Instant OCR extraction</li>
                    <li>✔ Automatic document categorization</li>
                    <li>✔ Secure user access</li>
                    <li>✔ Built for speed, reliability, and efficiency</li>
                </ul>

                <p class="mt-4 opacity-75 fst-italic">
                    “A school project engineered with real-world professionalism.”
                </p>
            </div>
        </div>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
